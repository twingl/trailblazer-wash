{
  "name": "trailblazer-wash",
  "version": "0.0.0",
  "description": "Trailblazer \"Wash\" Chrome extension",
  "watch": {
    "watching": "{node_modules/app/**,ui/pages/js/src,ui/popup/js/src}/*"
  },
  "scripts": {
    "components": "jsx node_modules/app/src node_modules/app/components",
    "watch-map": "browserify ui/pages/js/src/map.js -o ui/pages/js/build/map.js --debug --verbose",
    "watch-trails": "browserify ui/pages/js/src/trails.js -o ui/pages/js/build/trails.js --debug --verbose",
    "watch-popup": "browserify ui/popup/js/src/popup.js -o ui/popup/js/build/popup.js --debug --verbose",
    "build-map": "browserify -g uglifyify ui/pages/js/src/map.js -o ui/pages/js/build/map.js",
    "build-trails": "browserify -g uglifyify ui/pages/js/src/trails.js -o ui/pages/js/build/trails.js",
    "build-popup": "browserify -g uglifyify ui/popup/js/src/popup.js -o ui/popup/js/build/popup.js",
    "watching": "npm run components && npm run watch-map & npm run watch-trails & npm run watch-popup",
    "watch": "npm run components && npm run watch-map & npm run watch-trails & npm run watch-popup && npm-watch",
    "build": "npm run components && npm run build-map & npm run build-trails & npm run build-popup"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "dependencies": {
    "d3": "^3.4.11",
    "d3-tip": "git://github.com/jansegre/d3-tip",
    "domready": "^1.0.7",
    "jsdoc": "~3.3.0-alpha9",
    "lodash": "^2.4.1",
    "react": "^0.11.2"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/twingl/trailblazer-wash.git"
  },
  "bugs": {
    "url": "https://github.com/twingl/trailblazer-wash/issues"
  },
  "homepage": "http://twin.gl",
  "devDependencies": {
    "browserify": "^5.11.2",
    "npm-watch": "0.0.0",
    "reactify": "^0.14.0",
    "uglifyify": "^2.5.0"
  }
}
